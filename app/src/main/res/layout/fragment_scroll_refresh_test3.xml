<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dimen_20">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="@dimen/dimen_10"
        android:text="我是ScrollView中的内容"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="@dimen/dimen_100"
        android:text="我是ScrollView中的内容"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="@dimen/dimen_100"
        android:text="我是ScrollView中的内容"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="@dimen/dimen_100"
        android:text="下面是ScrollView中嵌套的listFragment模块"/>

    <fragment
        android:id="@+id/list_fragment_scroll"
        android:name="com.company.myapp.fragment.ListViewTest1Fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimen_10"/>

</LinearLayout>
