<com.ghy.baseapp.component.slidmenu.SlidingMenu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ghy="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_slid_menu"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/slateblue"
    android:scrollbars="none"
    ghy:rightPadding="100dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

        <include layout="@layout/layout_slid_menu" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:background="@color/white">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="toggleMenu"
                android:background="@color/colorAccent"
                android:textColor="@color/white"
                android:text="打开关闭菜单" />

        </LinearLayout>

    </LinearLayout>

</com.ghy.baseapp.component.slidmenu.SlidingMenu>